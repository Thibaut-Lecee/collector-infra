# POSTGRES EXAMPLE
# Project / network
COMPOSE_PROJECT_NAME=collector

# Postgres (collector)
POSTGRES_IMAGE=postgres:17
POSTGRES_USER=collector
POSTGRES_PASSWORD=change-me
POSTGRES_DB=collector
POSTGRES_PORT=5432

# Volume name (lets you reuse pattern across projects)
POSTGRES_VOLUME=collector_postgres_data

# Optional: enable pgAdmin later (keep placeholders)
PGADMIN_PORT=5050

# Postgres (zitadel, separate DB)
ZITADEL_DB_NAME=zitadel
ZITADEL_DB_ADMIN_USER=postgres
ZITADEL_DB_ADMIN_PASSWORD=change-me
ZITADEL_DB_APP_USER=zitadel
ZITADEL_DB_APP_PASSWORD=change-me

# Zitadel
ZITADEL_EXTERNALDOMAIN=localhost
# Must be exactly 32 characters.
ZITADEL_MASTERKEY=MasterkeyNeedsToHave32Characters
ZITADEL_FIRSTINSTANCE_ORG_HUMAN_USERNAME=zitadel-admin
ZITADEL_FIRSTINSTANCE_ORG_HUMAN_PASSWORD=ChangeMe123!

# Grafana (local)
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# API Configuration
NODE_ENV=production
LOG_LEVEL=info
CORS_ORIGIN=http://localhost:3000

# Zitadel (OIDC Authentication)
ZITADEL_ISSUER=http://localhost:8080
ZITADEL_INTERNAL_ISSUER=http://zitadel:8080
ZITADEL_CLIENT_ID=your_client_id_here
ZITADEL_CLIENT_SECRET=your_client_secret_here
