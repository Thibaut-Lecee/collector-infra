{
  "uid": "api-metrics",
  "title": "API Metrics",
  "timezone": "browser",
  "schemaVersion": 41,
  "version": 1,
  "refresh": "5s",
  "editable": true,
  "tags": ["collector", "metrics", "prometheus"],
  "time": {
    "from": "now-15m",
    "to": "now"
  },
  "annotations": {
    "list": []
  },
  "panels": [
    {
      "id": 1,
      "type": "timeseries",
      "title": "RPS (total)",
      "datasource": "Prometheus",
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(http_requests_total[1m]))"
        }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 }
    },
    {
      "id": 2,
      "type": "timeseries",
      "title": "Errors 5xx (RPS)",
      "datasource": "Prometheus",
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(http_requests_total{status_code=~\"5..\"}[1m]))"
        }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 }
    },
    {
      "id": 3,
      "type": "timeseries",
      "title": "Latency p95 (ms)",
      "datasource": "Prometheus",
      "fieldConfig": {
        "defaults": { "unit": "ms" },
        "overrides": []
      },
      "targets": [
        {
          "refId": "A",
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket[1m])) by (le)) * 1000"
        }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 }
    },
    {
      "id": 4,
      "type": "timeseries",
      "title": "Latency avg (ms)",
      "datasource": "Prometheus",
      "fieldConfig": {
        "defaults": { "unit": "ms" },
        "overrides": []
      },
      "targets": [
        {
          "refId": "A",
          "expr": "(sum(rate(http_request_duration_seconds_sum[1m])) / sum(rate(http_request_duration_seconds_count[1m]))) * 1000"
        }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 }
    },
    {
      "id": 5,
      "type": "timeseries",
      "title": "Memory RSS",
      "datasource": "Prometheus",
      "fieldConfig": {
        "defaults": { "unit": "bytes" },
        "overrides": []
      },
      "targets": [
        {
          "refId": "A",
          "expr": "process_resident_memory_bytes"
        }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 }
    },
    {
      "id": 6,
      "type": "timeseries",
      "title": "CPU (cores)",
      "datasource": "Prometheus",
      "fieldConfig": {
        "defaults": { "unit": "cores" },
        "overrides": []
      },
      "targets": [
        {
          "refId": "A",
          "expr": "rate(process_cpu_user_seconds_total[1m]) + rate(process_cpu_system_seconds_total[1m])"
        }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 16 }
    },
    {
      "id": 7,
      "type": "timeseries",
      "title": "RPS by route",
      "datasource": "Prometheus",
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (route) (rate(http_requests_total[1m]))"
        }
      ],
      "gridPos": { "h": 10, "w": 24, "x": 0, "y": 24 }
    },
    {
      "id": 8,
      "type": "timeseries",
      "title": "Latency p95 by route (ms)",
      "datasource": "Prometheus",
      "fieldConfig": {
        "defaults": { "unit": "ms" },
        "overrides": []
      },
      "targets": [
        {
          "refId": "A",
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket[1m])) by (le, route)) * 1000"
        }
      ],
      "gridPos": { "h": 10, "w": 24, "x": 0, "y": 34 }
    }
  ],
  "templating": {
    "list": []
  }
}

